<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SurveyPage"
    android:background="@drawable/background"
    >

    <ImageView
        android:id="@+id/user_butterfly_imageView"
        android:layout_width="294dp"
        android:layout_height="284dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/orange_butterfly_image" />

    <TextView
        android:id="@+id/username_textView"
        android:layout_width="181dp"
        android:layout_height="36dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="48dp"
        android:text="UserName32"
        android:textColor="#989898"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_butterfly_imageView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="How are you feeling?"
        android:textColor="#989898"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_textView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/red_butterfly_button"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="543dp" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/darkorange_butterfly_button"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="543dp" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/orange_butterfly_button"
            tools:layout_editor_absoluteX="171dp"
            tools:layout_editor_absoluteY="543dp" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/yellow_butterflu_button"
            tools:layout_editor_absoluteX="246dp"
            tools:layout_editor_absoluteY="543dp" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/green_butterfly_button"
            tools:layout_editor_absoluteX="327dp"
            tools:layout_editor_absoluteY="543dp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="62dp"
        android:layout_height="72dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/home_button"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="605dp"

        />
</android.support.constraint.ConstraintLayout>