<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/quest_receipt_panel"
    android:gravity="center_horizontal|fill_vertical"
    android:orientation="vertical">

    <TextView
        android:layout_width="174dp"
        android:layout_height="58dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="How to play"
        android:textColor="@color/colorWhite"
        android:textSize="12pt" />


    <ImageView
        android:id="@+id/pollen_icon_receipt"
        android:layout_width="202dp"
        android:layout_height="321dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/meditation_tutorial" />


    <TextView
        android:id="@+id/meditation_directions"
        style="@style/inverse_text_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Press the button when \nthe ring around it appears"

        android:textAlignment="center" />

    <Button
        android:id="@+id/continue_button"

        android:layout_width="170dp"
        android:layout_height="28dp"

        android:layout_marginTop="30dp"

        android:text="continue"
        style="@style/buttons"

        android:textColor="@color/colorWhite" />

</LinearLayout>