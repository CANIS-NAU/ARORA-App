<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MindfullnessBreathing"
    android:background="@drawable/dusk_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mindfulness_breathing"
            style="@style/inverse_page_header_text_views"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/breathing_page_header"
            />

        <ImageView
            android:id="@+id/imageView_meditation_mindfullness"

            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"

            android:layout_below="@id/breathing_page_header"
            android:layout_centerHorizontal="true"

            app:srcCompat="@drawable/breathing_button" />

        <ImageView
            android:id="@+id/alpha_channel_breathing_icon"

            android:layout_width="250dp"
            android:layout_height="260dp"

            android:layout_centerHorizontal="true"

            android:alpha="0.5"
            android:scaleType="fitXY"

            app:srcCompat="@drawable/breathing_button" />




    <TextView
        android:id="@+id/textView3"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"

        android:layout_below="@id/alpha_channel_breathing_icon"

        android:text="Focus on your breath to regain your calm\n\nLet's exercise 5 Breaths\n\nPress the icon below to start\n\nHold the button when you breathe in \nRelease the icon when you breathe out"
        style="@style/inverse_text_views" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_time_selection_breathing"
        android:layout_width="340dp"
        android:layout_height="59dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"

        android:layout_below="@id/textView3"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />

    <ImageButton
        android:id="@+id/play_button_walking"

        android:layout_width="60dp"
        android:layout_height="60dp"

        android:background="#00000000"
        android:scaleType="fitCenter"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:layout_centerHorizontal="true"

        app:srcCompat="@drawable/play_button" />


    <include
        android:id="@+id/include"
        layout="@layout/bottom_menu_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>



<!--    <TextView-->
<!--        android:id="@+id/textView5"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="26dp"-->
<!--        android:layout_marginTop="8dp"-->
<!--        android:text="Scroll to select breath count"-->
<!--        android:textColor="#FFFFFF"-->
<!--        android:textSize="7pt"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintHorizontal_bias="0.497"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/recycler_view_time_selection_breathing" />-->

    <ImageButton
        android:id="@+id/exit_button_walking"
        android:layout_width="25dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/exit_button_breathing"
        android:visibility="gone"/>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>